# Application Configuration
APP_NAME=AI-Interviewer

# Clerk Authentication
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_your_publishable_key
CLERK_SECRET_KEY=sk_test_your_secret_key

# Environment & URLs
MOTIA_ENV=development
SERVER_URL=http://localhost:8000
CLIENT_SERVER_URL=http://localhost:3000

# Database
DATABASE_URL="postgresql://username:password@localhost:5432/ai_interviewer?schema=public"

# Backblaze B2 Storage
B2_APPLICATION_KEY_ID=your_b2_key_id
B2_APPLICATION_KEY=your_b2_application_key
B2_BUCKET_NAME=ai-interviewer-bucket
B2_BUCKET_ID=your_bucket_id
B2_BUCKET_BASE_URL=https://f000.backblazeb2.com/file/ai-interviewer-bucket

# Google Gemini AI
GEMINI_BASE_URL=https://generativelanguage.googleapis.com/v1beta
GEMINI_API_KEY=your_gemini_api_key
GEMINI_API_KEY1=your_secondary_gemini_key

# SMTP Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your_app_password
SMTP_FROM=AI-Interviewer <your-email@gmail.com>

# JWT Configuration
JWT_SECRET=your_jwt_secret_here
SOCKET_JWT_SECRET=your_socket_jwt_secret
JWT_EXPIRES_IN=7d

# Redis (for Motia/WebSocket scaling)
MOTIA_REDIS_HOST=localhost
MOTIA_REDIS_PORT=6379

# LiveKit (real-time video/audio)
LIVEKIT_URL=wss://your-project.livekit.cloud
LIVEKIT_API_KEY=your_livekit_api_key
LIVEKIT_API_SECRET=your_livekit_secret

# Voice AI
VAPI_API_KEY=your_vapi_server_api_key
